{
  "manifest_version": 3,
  "name": "Github Buddy",
  "version": "1.0",
 "description": "View your GitHub profile stats, repos, and followers directly from your browser extension.",
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "contextMenus", "identity"]
}
